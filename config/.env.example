# RepairShopr Connector Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# REQUIRED: RepairShopr Configuration
# ==============================================================================

# Your RepairShopr subdomain (the part before .repairshopr.com)
# Example: If your URL is https://acmerepair.repairshopr.com, use "acmerepair"
RS_SUBDOMAIN=yourcompany

# Your RepairShopr API key
# Get it from: RepairShopr Admin -> Profile (top right) -> API Tokens
RS_API_KEY=your-api-key-here

# ==============================================================================
# OPTIONAL: Data Selection
# ==============================================================================

# Which data types to sync (true/false)
RS_INCLUDE_TICKETS=true
RS_INCLUDE_CUSTOMERS=true
RS_INCLUDE_ASSETS=true
RS_INCLUDE_INVOICES=false

# Filter tickets by status (comma-separated, empty = all)
# Common statuses: New, In Progress, Waiting on Customer, Resolved, Invoiced
RS_TICKET_STATUSES=

# ==============================================================================
# OPTIONAL: Sync Configuration
# ==============================================================================

# Poll interval in minutes (default: 10)
RS_POLL_INTERVAL_MINUTES=10

# Rate limit (default: 150, max: 180)
RS_REQUESTS_PER_MINUTE=150

# Batch size for document processing (default: 50)
RS_BATCH_SIZE=50

# ==============================================================================
# OPTIONAL: Onyx Configuration (if using Ingestion API)
# ==============================================================================

# Onyx API endpoint
ONYX_API_URL=http://localhost:8080

# Onyx Admin API key (for programmatic connector creation)
ONYX_API_KEY=your-onyx-api-key

# ==============================================================================
# OPTIONAL: Logging
# ==============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
